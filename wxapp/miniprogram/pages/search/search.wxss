/* pages/search/search.wxss */
.main {
    box-sizing: border-box;
    padding-top: 44rpx;
    width: 100vw;
    height: 100vh;
    background-color: #FFFFFF;
}
.input-wrapper {
    margin-bottom: 42rpx;
    display: flex;
    align-items: center;
    margin: 14rpx auto;
    width: 705rpx;
    height: 114rpx;
    background-color: #FFFFFF;
    border-radius: 30rpx;
    box-shadow: 0px 4px 16px 0px rgba(0,0,0,0.08); 
}
.input-wrapper input{
    width: 310rpx;
    height: 100%;
}

.wrapp-left {
    width: 42rpx;
    height: 42rpx;
    margin: 0 42rpx 0 54rpx;
}
.wrapp-left image{
    width: 100%;
    height: 100%;
}
.buttn {
    margin-right: 9rpx;
    width: 216rpx;
    height: 100%;
    line-height: 114rpx;
    text-align: center;
    font-size: 30rpx;
    font-family: Source Han Sans CN;
    font-weight: 500;
    color: #FFFFFF;
    border-radius: 40rpx;
}
.content {
    margin: 42rpx auto 0;
    width: 622rpx;
}
.header {
    margin-bottom: 40rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: #313131;
}
.wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
}
.itembox {
    margin-bottom: 28rpx;
    width: 196rpx;
    height: 60rpx;
    background-color: #F7F7F7;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: #4F4F4F;
    border-radius: 10rpx;
}
